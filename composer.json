{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
	  	"yipl/hookah":	"~0.4"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
	  "psr-4": {
		"Test\\": "tests"
	  }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [],
		"fix-cs": [
			"git diff --name-only --cached | grep .php|xargs -t -I {} php-cs-fixer fix {} --level=psr2 --fixers=align_double_arrow,align_equals,concat_with_spaces,multiline_spaces_before_semicolon,ordered_use,short_array_syntax,strict"
	  	]
		
	},
	"config": {
		"preferred-install": "dist"
	}
}
